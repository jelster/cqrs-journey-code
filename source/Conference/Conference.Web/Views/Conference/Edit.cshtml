@model Conference.ConferenceInfo

@{
    ViewBag.Title = "Edit";
}

@section Head {
    <script>
        $(function () {
            // TODO: Is there a way to add these classes to the editors 
            // without having to write custom editor templates?
            $('#StartDate').addClass('datepicker');
            $('#EndDate').addClass('datepicker');

            $(".datepicker").datepicker();
        });
    </script>
}

<p style="text-align: right">
    @Html.DisplayFor(model => model.OwnerName)
</p>

@{ Html.RenderPartial("Navigation"); }

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.Id)

    <fieldset>
        <legend>Owner Information</legend>
        <div class="display-label">
            @Html.DisplayNameFor(model => model.OwnerName)
        </div>
        <div class="display-label">
            @Html.DisplayFor(model => model.OwnerName)
            @Html.HiddenFor(model => model.OwnerName)
        </div>        

        <div class="display-label">
            @Html.DisplayNameFor(model => model.OwnerEmail)
        </div>
        <div class="display-label">
            @Html.DisplayFor(model => model.OwnerEmail)
            @Html.HiddenFor(model => model.OwnerEmail)
        </div>
    </fieldset>
    
    <fieldset>
    <legend>Conference Information</legend>
        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Description)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Slug)
        </div>
        <div class="editor-field">
            @Html.DisplayFor(model => model.Slug)
            @Html.HiddenFor(model => model.Slug)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.StartDate)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.StartDate)
            @Html.ValidationMessageFor(model => model.StartDate)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.EndDate)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.EndDate)
            @Html.ValidationMessageFor(model => model.EndDate)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Cancel", "Index", new { slug = @Model.Slug }, null)
</div>