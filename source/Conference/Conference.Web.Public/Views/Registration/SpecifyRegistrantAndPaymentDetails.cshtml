@model Conference.Web.Public.Models.RegistrationViewModel
@{
    ViewBag.Title = "Registration for " + ViewBag.Conference.Name;
}
@section Head
{
    <script src="/Scripts/Conference.js" type="text/javascript"></script>
}
<h2>
    Registrant Information</h2>
<div id="countdown">
    <div id="countdown_time" data-targetDate="@DateTimeExtensions.ToEpochMilliseconds(this.ViewBag.ExpirationDateUTC)"/>
    <div id="countdown_warning">
        Complete the registration before the count down expires.</div>
</div>
<div id="tickets">
    <table width="100%">
        <tr>
            <th align="left">
                Seat type
            </th>
            <th align="right">
                Price
            </th>
            <th align="right">
                Quantity
            </th>
            <th align="right">
                Total
            </th>
        </tr>
        @for (var i = 0; i < this.Model.Order.Items.Count; i++)
        { 
            <tr>
                <td align="left">@Html.DisplayFor(model => model.Order.Items[i].SeatTypeDescription)
                </td>
                <td align="right">@Html.DisplayFor(model => model.Order.Items[i].Price)
                </td>
                <td align="right">@Html.DisplayFor(model => model.Order.Items[i].Quantity)
                </td>
                <td align="right">@Html.DisplayFor(model => model.Order.Items[i].Total)
                </td>
            </tr>
        }
        <tr>
            <td colspan="3" align="right">
                Total
            </td>
            <td align="right">@Html.DisplayFor(model => model.Order.Total)
            </td>
        </tr>
    </table>
</div>
<div class="main">
    @using (Html.BeginForm())
    {
        @Html.HiddenFor(model => model.RegistrantDetails.OrderId)

        <div class="fieldset">
            <div class="editor-label">@Html.LabelFor(model => model.RegistrantDetails.FirstName)</div>
            <div class="editor-field">@Html.EditorFor(model => model.RegistrantDetails.FirstName)</div>
            <div class="editor-label">@Html.LabelFor(model => model.RegistrantDetails.LastName)</div>
            <div class="editor-field">@Html.EditorFor(model => model.RegistrantDetails.LastName)</div>
            <div class="editor-label">@Html.LabelFor(model => model.RegistrantDetails.Email)</div>
            <div class="editor-field">@Html.EditorFor(model => model.RegistrantDetails.Email)</div>
            <div class="editor-label">
                Confirm email:
            </div>
            <div class="editor-field">
                <input type="text" data-val="true" data-val-equalto="E-Mail addresses do not match."
                    data-val-equalto-other="Email" data-val-required="Please confirm the e-mail address." /></div>
        </div>

        <div class="fieldset">
            <div class="editor-label">@Html.Label("Payment type");</div>
            <div class="editor-field">@Html.RadioButton("paymentType", "thirdParty", true) Credit
                card</div>
            <div class="editor-field">@Html.RadioButton("paymentType", "invoice") Invoice me</div>
        </div>
    
        <p>
            <input type="submit" value="Next" />
        </p>

    }
</div>
<script type="text/javascript">

    function reservationTimedOut() {
        window.location = '@Url.Action("DisplayOrderStatus", "Registration", new { conferenceCode = this.ViewBag.Conference.Code, orderId = this.Model.RegistrantDetails.OrderId })';
    }

    $(document).ready(function () {
        Conference.StartTimer('countdown_time', reservationTimedOut);
    });

</script>
